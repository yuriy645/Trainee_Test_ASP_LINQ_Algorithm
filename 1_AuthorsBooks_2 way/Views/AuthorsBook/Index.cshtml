@model List<AuthorsBook>
<p>The List of books:</p>
<div class="outItem">
    @for (int i = 0; i < @Model.Count; i++)
    {
        <div class="item">
            <div><b>@(i+1)</b></div>
            <div>@Model[i].Author.AuthorSecondName&nbsp;-&nbsp;@Model[i].Book.BookName</div>
        </div>
    }
</div>
